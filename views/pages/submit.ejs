<head>
  <%- include('../partials/head'); %>
</head>

<body>
  <%- include('../partials/topnav'); %>
    <div class="uk-container" uk-height-viewport="expand: true">
      <main>
        <h1>2021 Rally Submission Tool</h1>
        <div class="uk-container">
          <ul class="uk-flex-center" uk-tab>
            <li><a href="#">Submit Mileage</a></li>
            <li><a href="#">Submit Grand Tour</a></li>
          </ul>

          <ul class="uk-switcher uk-margin">
            <!-- Mileage Submissions -->
            <li>
              <div class="uk-grid-small uk-grid" uk-grid>
                <form class="mt-4 image-submission" action="/image-upload" method="POST" enctype="multipart/form-data">
                  <label for="input-images">
                    <img class="uk-align-center mm-img-border" data-src="/images/MMPlaceHolder.png" width="434"
                    height="370" alt="Click Here to Upload" uk-img>
                  </label>
                  <input type="file" name="image-to-submit" id="input-images" class="form-control-file border" />
                  <button type="submit" class="uk-button uk-button-primary">Submit</button>
                </form>
                <div class="uk-child-width-1-2@s">
                  <div class="preview-images"></div>
                  <!-- <img class="uk-align-center mm-img-border" data-src="/images/MMPlaceHolder.png" width="434"
                    height="370" alt="Click Here to Upload" uk-img> -->
                </div>
                <div class="uk-child-width-1-2@s">
                  <!-- <p>
                    Submit a photo of your odometer and a dated business receipt. You do not have to include your rally flag.
                  </p> -->
                  <form>
                    <label class="uk-form-label">Bike Ridden:</label>
                    <select class="uk-select">
                      <% bikes.forEach(function(Bike) { %> 
                      <option><%= Bike.BikeName %></option>
                    <% }) %>
                    </select>
                    <label class="uk-form-label">Odometer:</label>
                    <input class="uk-input" type="text">
                  </form>
                  <button class="uk-button uk-button-primary">Submit</button>
                </div>
              </div>
            </li>
            <!-- Grand Tour Submission -->
            <li>
              <div class="uk-grid-small uk-grid" uk-grid>
                <form class="mt-4 image-submission" action="/image-upload" method="POST" enctype="multipart/form-data">
                  <label for="input-images">
                    <img class="uk-align-center mm-img-border" data-src="/images/MMPlaceHolder.png" width="434"
                    height="370" alt="Click Here to Upload" uk-img>
                  </label>
                  <input type="file" name="image-to-submit" id="input-images" class="form-control-file border" />
                  <button type="submit" class="uk-button uk-button-primary">Submit</button>
                </form>
                <div class="uk-child-width-1-2@s">
                  <!-- <p>
                    Submit a photo of your odometer and a dated business receipt. You do not have to include your rally flag.
                  </p> -->
                  <form>
                    <label class="uk-form-label">Bike Ridden:</label>
                    <select class="uk-select">
                      <% bikes.forEach(function(Bike) { %> 
                      <option><%= Bike.BikeName %></option>
                    <% }) %>
                    </select>
                    <label class="uk-form-label">Choose a Bonus:</label>
                    <select class="uk-select">
                      <% bonuses.forEach(function(bonus) { %> 
                        <option><%= bonus.BonusCode %></option>
                      <% }) %>
                    </select>
                  </form>
                  <button class="uk-button uk-button-primary">Submit</button>
                </div>
              </div>
            </li>
          </ul>
